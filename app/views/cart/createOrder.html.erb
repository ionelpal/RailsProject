<div class="row"> 
	<div class="col-md-1"></div>
	 <div class="col-md-9">
		<h4 class="text-center"><mark>Order Details</mark></h4><br/><br/>

		<div>
		<% total = 0 %>
		<table class="table table-striped table-bordered">
		<tr>
		<td class="legend"></td>
		<td class="legend">Product Name</td>
		<td class="legend">Price</td>
		<td class="legend">Qty</td>
		<td class="legend">Total</td>
		</tr>
		<% @cart.each do | id, quantity | %>
		<% item = Item.find_by_id(id) %>
		<tr>
		<td>
		<div class="image">
		<%= link_to (image_tag item.image_ur, :style => "height:60px"), item %>
		</div>
		</td>
		<td class="title"><%= link_to item.name, item %></td>
		<td class="price"><%= number_to_currency(item.price) %></td>
		<td class="quantity"><%= quantity %><br /></td>
		<td class="price">
		<%= number_to_currency(quantity * item.price, :unit => "€") %>
		</td>

		</tr>
		<% total += quantity * item.price %>
		<% end %>
		<tr>
		<td colspan="4">
		<div class="total"><mark>Total:</mark></div>
		</td>
		<td>
		<div class="price"><%= number_to_currency(total, :unit => "€") %></div>
		</td>
		</tr>
		</table>
	</div><!-- end col-md-9-->
	<div class="col-md-2"></div>
	</div><!-- end raw-->
	<div class="row"> 
	<div class="col-md-9">
		<div class="text-center">
		<span class="btn btn-default active btn-xs" style="background: #eee"><%= link_to 'Continue Shopping', :controller => :items %></span>

<span class=" btn btn-default active btn-xs" style="background: #eee"><%= link_to 'Return to Check', :controller => :cart %></span>
		<span class=" btn btn-default btn-sm pull-right active" style="background: #eee"><%= link_to 'Place Order', payment_path %></span><br/><br/>
		</div>
</div><!-- end r0w-->

