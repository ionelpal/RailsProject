 <div class="row"> 
    <div class="col-md-3"></div>
        <div class="col-md-6 text-center"><br/>

          <h4><mark>Message Summary</mark></h4><br/>
          
          <p id="notice"><%= notice %></p>

          <p>
            <strong>Firstname:</strong>
            <%= @contact.firstname %>
          </p>

          <p>
            <strong>Lastname:</strong>
            <%= @contact.lastname %>
          </p>

          <p>
            <strong>Emaill:</strong>
            <%= @contact.emaill %>
          </p>

          <p>
            <strong>Phone:</strong>
            <%= @contact.phone %>
          </p>

          <p>
            <strong>Message:</strong>
            <%= @contact.message %>
          </p>



          <%= link_to 'Edit', edit_contact_path(@contact), :class => "btn btn-warning active   space btn-xs" %> 
          <% if current_user.admin? %>
          <%= link_to '', contacts_path, :class =>"btn btn-warning active  space btn-xs" %>
          <%end%>
          <% if user_signed_in? & !current_user.admin?%>
          <%= link_to 'Submit', items_path, :class => "btn btn-warning active   space btn-xs" %>
          <%end%>
      </div>
<div class="col-md-3"></div>
</div><!--end row-->